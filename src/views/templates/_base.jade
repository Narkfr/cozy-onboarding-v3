.main-wrapper
    header
        if figureid
            figure(id=id)
                if link
                    a(href=link target="_blank")
                        svg: use(xlink:href=figureid)
                else
                    .svg-wrapper
                        svg: use(xlink:href=figureid)

                    if badgeId
                      .badge
                        .svg-wrapper
                          svg: use(xlink:href=badgeId)

        block header

    div(role="region")
        block region

    block errors
        p(class="errors")

    footer
        .controls
            block controls

        block footer

        .progression
