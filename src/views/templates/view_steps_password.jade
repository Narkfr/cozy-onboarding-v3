extends _base


block header
    h1=t('step password title')

block region
    form(id="password-form")
        p(class='form-desc')!=t('step password description')

        p(class='line')
            label(for="password")=t('step password label')
            button(class='visibility', type="button", action="password-visibility")= t(visibilityTxt)
            input(type=inputType, name="password", id="password" autocomplete="new-password" placeholder=t("step password input placeholder"))
        progress.pw-weak(value=passwordStrength.percentage max=100)

block controls
    button(class="next", form="password-form")= t('step password submit')

block footer
    p(class="footer-text")
        span=t('step password footer line 1')
        br
        a(href=t('step password footer link'), target="_blank")=t('step password footer link text')
        span=t('step password footer line 2')
